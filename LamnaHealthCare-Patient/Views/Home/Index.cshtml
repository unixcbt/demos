<br /><br />

@section scripts {
    <script src="~/Scripts/config.js" typeof="text/javascript"></script>
    <script src="~/Scripts/index.js" typeof="text/javascript"></script>
    <script src="~/Scripts/jquery.effects.core.js"></script>
    <script src="~/Scripts/jquery.effects.slide.js"></script>
}
